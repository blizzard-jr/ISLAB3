<infinispan>
    <cache-container>
        <!-- Кеш для Hibernate L2 -->
        <local-cache name="entity">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
        </local-cache>

        <!-- Кеш таймстемпов (обязателен Hibernate) -->
        <local-cache name="hibernate-timestamps">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
        </local-cache>

        <!-- Кеш запросов -->
        <local-cache name="hibernate-query">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
        </local-cache>
    </cache-container>
</infinispan>